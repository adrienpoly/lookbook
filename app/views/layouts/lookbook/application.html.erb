<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <%= render "layouts/lookbook/head" %>

  <link href="<%= lookbook_asset_path("/app.css") %>" rel="stylesheet">
  <script src="<%= lookbook_asset_path("/app.js") %>" defer></script> 

  <title>Lookbook</title>
</head>
<body>  
  <%= render Lookbook::App.new do |app| %>
    <% app.with_header do |header| %>
      <% header.with_branding do %>
        Lookbook
      <% end %>
    <% end %>

    <%= app.with_sidebar do %>
      <strong>sidebar</strong>
    <% end %>

    <%= app.with_main do %>
      <%= yield %>
    <% end %>
  <% end %>
</body>
</html>
